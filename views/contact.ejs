});
    var scene = document.querySelector('.three-d');
      var parallaxInstance = new Parallax(scene);
      parallaxInstance.invert(false, false);
   

    document.querySelector(".menu-icon").addEventListener('click',(e)=>{
            document.querySelector('.bi-x').classList.toggle('hidden');
            document.querySelector('.bi-list').classList.toggle('hidden');
            document.querySelector('.nav-mobile').classList.toggle('menu-hide');
    })
    var notyf = new Notyf();

    let submitBt =document.getElementById('submit');


    function check(){
        let email = document.getElementById('email').value.trim();
        let name = document.getElementById('name').value.trim();
        let message = document.getElementById('message').value.trim();
        if(validateEmail(email)&&name.length>0&&message.length>0&&email.length>0){
            submitBt.style.opacity=1;
    submitBt.style.pointerEvents="all";
            return true;
        }
        else{
            submitBt.style.opacity=0.7;
    submitBt.style.pointerEvents="none";
    return false;
        }
    }
    function send(e){
        if(check())
          { 
            $('.loader').show();

               $.ajax({
                type: "POST",
                url: '/submit',
                data: 
                {
                    name: document.getElementById('name').value.trim(),
                    email: document.getElementById('email').value.trim(),
                    message: document.getElementById('message').value.trim()
                },
                success: (success)=>{
                    notyf.success("Submitted!")
                    $('.loader').hide();
                    document.getElementById('name').value="";
                    document.getElementById('email').value="" ;
                document.getElementById('message').value="";
                }        
                
            });}
        else{
            notyf.error("Invalid info")
        }

    }
    const validateEmail = (email) => {
  return String(email)
    .toLowerCase()
    .match(
      /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
    );
};
